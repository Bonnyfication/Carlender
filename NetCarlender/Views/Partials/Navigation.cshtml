@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<div class="header_bg">
    <div class="container">
    	<div class="header">
    		<div class="logo">
    			<a href="index"><img src="/images/logo.png" alt=""/></a>
    		</div>
    		<div class="h_menu">
    		<a id="touch-menu" class="mobile-menu" href="#">Menu</a>
    		<nav>
    		<ul class="menu list-unstyled">
    		    
    		    @if(CurrentPage.Site().Id == CurrentPage.Id)
    		    {
    		        <li class="activate"><a href="/">@CurrentPage.Site().Name</a></li>
    		    }
    		    else
    		    {
    		        <li><a href="/">@CurrentPage.Site().Name</a></li>
    		    }

    		    
    		    @foreach(var site in CurrentPage.Site().Children("Unterseite"))
    		    {
    		        if(site.Id == CurrentPage.Id)
    		        {
    		            <li class="activate">
    		            	<a href="@site.Url">@site.Name</a>
    		           </li>
    		        }
    		        else
    		        {
    		            <li>
    		            	<a href="@site.Url">@site.Name</a>
    		           </li>
    		        }
    		    }
    			
    		</ul>
    		</nav>
    		<script src="/js/menu.js" type="text/javascript"></script>
    		</div>
    		
    		<div class="searchbar">
    		    <form action="/suchergebnisse" method="GET">
                    <input type="text" name="search" />
                    <input type="submit" value="Search" />
                </form>
    		</div>
    		
    		<div class="clearfix"></div>
    	</div>
    </div>
</div>