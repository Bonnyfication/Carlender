@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Suche>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
	string query = Request.QueryString["search"];
	
	
}

    <div class="main_bg">
        <!-- start main -->
        <div class="container">
            <div class="main_grid1">
               
               <ul>
                  @{ 
                  
                  if(query == "" || query == null)
	                {
	                    <h1>"Bitte geben Sie einen Suchbegiff ein!"</h1>
	                }
	                else
	                {
    	                foreach(var result in Umbraco.TypedSearch(query))
                        {
                            <li>
                            <a href="@result.Url">@result.Name</a>
                            </li>
                        }
	                }
	               }
                
                </ul>

                                   
               
            </div>
        </div>
    </div>